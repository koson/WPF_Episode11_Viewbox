<Window x:Class="WPF_Episode11_Viewbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Episode11_Viewbox"
        mc:Ignorable="d"
        Title="WPF Episode 11: Viewbox Demo" Height="600" Width="1000">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Navigation Panel -->
        <Border Grid.Column="0" Background="#2C3E50" Padding="10">
            <StackPanel>
                <TextBlock Text="Viewbox Demos" 
                           FontSize="16" FontWeight="Bold" 
                           Foreground="White" Margin="0,0,0,20"/>
                
                <Button Content="1. Basic Viewbox" Click="ShowBasicViewbox" 
                        Margin="0,5" Padding="10,5"/>
                <Button Content="2. Stretch Modes" Click="ShowStretchModes" 
                        Margin="0,5" Padding="10,5"/>
                <Button Content="3. Scalable Icons" Click="ShowScalableIcons" 
                        Margin="0,5" Padding="10,5"/>
                <Button Content="4. Responsive Logo" Click="ShowResponsiveLogo" 
                        Margin="0,5" Padding="10,5"/>
                <Button Content="5. Dashboard Cards" Click="ShowDashboardCards" 
                        Margin="0,5" Padding="10,5"/>
                <Button Content="6. Icon Buttons" Click="ShowIconButtons" 
                        Margin="0,5" Padding="10,5"/>
                <Button Content="7. StretchDirection" Click="ShowStretchDirection" 
                        Margin="0,5" Padding="10,5"/>
                <Button Content="8. Complex Content" Click="ShowComplexContent" 
                        Margin="0,5" Padding="10,5"/>
                <Button Content="9. Aspect Ratios" Click="ShowAspectRatios" 
                        Margin="0,5" Padding="10,5"/>
            </StackPanel>
        </Border>
        
        <!-- Content Panel -->
        <ScrollViewer Grid.Column="1" x:Name="ContentPanel" 
                      VerticalScrollBarVisibility="Auto" 
                      Background="#ECF0F1">
            <Border Background="White" Margin="20" Padding="30" 
                    CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="Welcome to Viewbox Demo" 
                               FontSize="28" FontWeight="Bold" 
                               Margin="0,0,0,20"/>
                    
                    <TextBlock TextWrapping="Wrap" FontSize="14" Margin="0,10">
                        Viewbox is a powerful decorator control that automatically scales 
                        its child element to fit the available space while maintaining 
                        proportions. It's perfect for creating responsive UIs!
                    </TextBlock>
                    
                    <TextBlock TextWrapping="Wrap" FontSize="14" Margin="0,10">
                        Click any button on the left to see different Viewbox demos!
                    </TextBlock>
                    
                    <Border Background="LightBlue" Padding="15" Margin="0,20" 
                            CornerRadius="5" BorderBrush="Blue" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Key Features:" FontWeight="Bold" 
                                       FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock Text="• Automatic scaling to fit container" Margin="0,5"/>
                            <TextBlock Text="• Maintains aspect ratio (by default)" Margin="0,5"/>
                            <TextBlock Text="• Multiple stretch modes" Margin="0,5"/>
                            <TextBlock Text="• Perfect for icons, logos, and charts" Margin="0,5"/>
                            <TextBlock Text="• Responsive by design" Margin="0,5"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>